<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/viewSpacing_8dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/viewSpacing_10dp"
        app:cardCornerRadius="@dimen/viewSpacing_6dp">

        <ProgressBar
            android:id="@+id/progressDialog"
            android:layout_width="@dimen/viewSpacing_50dp"
            android:layout_height="@dimen/viewSpacing_50dp"
            android:indeterminateTint="@color/black"
            android:visibility="visible" />
    </LinearLayout>
</layout>